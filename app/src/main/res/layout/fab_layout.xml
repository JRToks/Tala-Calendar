<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="29dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/color_login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/event_shortcut_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_calendar"
        android:visibility="invisible"
        app:backgroundTint="@color/color_login_button"
        app:layout_constraintBottom_toTopOf="@+id/add_btn"
        app:layout_constraintEnd_toEndOf="@+id/add_btn"
        app:tint="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/talk_ai_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/color_login_button"
        app:layout_constraintBottom_toTopOf="@+id/event_shortcut_btn"
        app:layout_constraintEnd_toEndOf="@+id/event_shortcut_btn"
        app:srcCompat="@drawable/ic_talk_ai"
        app:tint="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents"/>

    <TextView
        android:id="@+id/text_Ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cali"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/event_shortcut_btn"
        app:layout_constraintEnd_toStartOf="@+id/talk_ai_btn" />

    <TextView
        android:id="@+id/text_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="Event"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/add_btn"
        app:layout_constraintEnd_toStartOf="@+id/event_shortcut_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>