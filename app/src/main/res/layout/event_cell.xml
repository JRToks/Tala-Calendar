<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/color_event"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/baseline_darkcyan_circle_24"/>

    <TextView
        android:id="@+id/eventCellTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/color_event"
        android:text="Event"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/startTimeCellTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCellTV"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="10:00 AM"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/startTimeCellTV"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/endTimeCellTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dash"
        android:layout_below="@id/eventCellTV"
        android:layout_marginBottom="8dp"
        android:text="12:00 PM"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>