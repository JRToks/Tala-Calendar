<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Tala_logo"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tala_placeholder_logo" />

    <RelativeLayout
        android:id="@+id/form_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tala_logo"
        android:layout_marginTop="20sp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/mainImageView1"
            android:layout_width="@dimen/login_holder_height"
            android:layout_height="@dimen/login_holder_height"
            android:layout_marginBottom="30dp"
            android:src="@drawable/user_icon"
            app:tint="#0097b2" />

        <ImageView
            android:id="@+id/mainImageView2"
            android:layout_width="@dimen/login_holder_height"
            android:layout_height="@dimen/login_holder_height"
            android:layout_below="@id/mainImageView1"
            android:layout_marginTop="20dp"
            android:src="@drawable/password_icon"
            app:tint="#0097b2" />

        <EditText
            android:id="@+id/email_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mainImageView1"
            android:layout_alignBottom="@id/mainImageView1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mainImageView1"
            android:background="@null"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_login_button"
            android:textSize="20sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email_editText"
            android:layout_marginTop="@dimen/login_horizontalline_spacing"
            android:background="#CCCCCC" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mainImageView2"
            android:layout_alignBottom="@id/mainImageView2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mainImageView2"
            android:background="@null"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/color_login_button"
            android:textSize="20sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/password_editText"
            android:layout_marginTop="@dimen/login_horizontalline_spacing"
            android:background="#CCCCCC" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_rememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/form_login"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:id="@+id/rememberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <Switch
                android:id="@+id/rememberSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:scaleX="0.6"
                android:scaleY="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/rememberSwitch"
                android:fontFamily="sans-serif"
                android:text="Remember Me"
                android:textColor="@color/color_login_button"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:text="Forgot Password?"
            android:textColor="@color/color_login_button"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/label_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#CCB5B5B5"
            android:typeface="serif" />

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:text="Sign up"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_login_button"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="200dp"
        android:layout_height="@dimen/login_button_height"
        android:layout_below="@id/form_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/selector_login_button">

        <Button
            android:id="@+id/login_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="LOGIN"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_welcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/form_login"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome Back !"
        android:textAlignment="viewStart"
        android:textColor="@color/color_login_button"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_singIntoCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/form_login"
        android:layout_marginStart="30dp"
        android:text="Login to your account"
        android:textColor="#CCB5B5B5" />

    <TextView
        android:id="@+id/textView_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_login"
        android:layout_centerHorizontal="true"
        android:text="Or sign in with"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/google_Btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:srcCompat="@drawable/google" />
</RelativeLayout>